[module/wlan]
type = internal/network
interface = ${env:POLYBAR_WIFI_CARD:wlp3s0}
interval = 5.0

format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = #5b

label-connected = "%{A1:wicd-gtk &:}%essid%%{A}"
label-disconnected = "%{A1:wicd-gtk &:}%{A} x"
label-disconnected-foreground = #5b

ramp-signal-foreground = ${colors.foreground-alt}

[module/pomodoro]
type = custom/script
; Use pomodoro glyphs in Nerd fonts
exec = pymodoro --break-prefix " " --pomodoro-prefix " " --pomodoro  --empty " " --break  --length 5 -sp ~/dotfiles/config/i3status/navi.mp3 -sb ~/dotfiles/config/i3status/navi.mp3
label = %output%
tail = true
interval = 1
; Start or reset the timer
click-left = if [ -f ~/.pomodoro_session ]; then rm ~/.pomodoro_session; else echo "25 5" > ~/.pomodoro_session; fi
; reset timer
click-right = if [ -f ~/.pomodoro_session ]; then rm ~/.pomodoro_session; fi

[module/eth]
type = internal/network
interface = ${env:POLYBAR_ETHERNET_CARD:eno1}
interval = 5.0

format-connected-prefix = " "
format-connected-foreground-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

label-disconnected = %ifname%
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 2

date = "%d-%m-%y"
time = "%H:%M"
label = %date% %time%
